    </view> -->
    </van-cell>
    <scroll-view scroll-x style='white-space: nowrap; display: flex;margin-bottom:10rpx;background-color:#fff'>
          <view class='card ell' wx:for="{{ item.goods_list }}" wx:for-item="goods" wx:key="{{ goods.goods_code }}" style='border: 0;'>
            <block>
              <view class='text-center' bindtap='showInfo' data-id="{{ goods.house_goods_id }}"><image src='http://ppqwtqkfk.bkt.clouddn.com/{{ goods.goods_img }}' style='width:220rpx;height:220rpx;'></image></view>
              <view bindtap='showInfo' data-id="{{ goods.house_goods_id }}"><text class='gs-name'>{{ goods.goods_name }}</text></view>
              <view><text class='price' bindtap='showInfo' data-id="{{ goods.house_goods_id }}">¥ {{ goods.price }}</text><van-icon bindtap='addCart' style='color:{{ color.success }} ;float: right;' name="shopping-cart" /></view>
              <view bindtap='showInfo' data-id="{{ goods.house_goods_id }}"><text class='text-del'>¥ {{ goods.original }}</text></view>
              </block>
          </view>
    </scroll-view>
  </view>

