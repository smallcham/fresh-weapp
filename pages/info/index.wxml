  <van-panel title="商品详情">
    <view class='card-fluid-warp text-muted text-small' style='border: 0rpx;'>
      <view wx:for="{{ goodsInfo.info_text }}" wx:key><text>{{ item }}</text></view>
      <view class='line'></view>
      <view class="text-center">
        <image mode='widthFix' style='width: 100%' lazy-load="true" wx:for="{{ goodsInfo.info_img }}" wx:key src='http://ppqwtqkfk.bkt.clouddn.com/{{ item }}'></image>
      </view>
    </view>
  </van-panel>
    <view class='container' style='margin-top: 15rpx; display: {{ goodsInfo.show_card === 1 ? "block" : "none" }}'>
      <view class='jumbotron no-border'>
        <view><text class='text-primary text-small'>如有疑问</text></view>
        <view><text class='text-primary text-small'>请随时联系我们</text></view>
